@using ChooseAndBuy.Web.ViewModels.Administration.Categories

@model CreateCategoryBindingModel

@{
    ViewData["Title"] = "Create Category";
}

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Success"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <partial name="~/Views/Shared/_AdminPanePartial.cshtml" />
        <div class="col-xl-9 col-lg-8 col-md-7">
            <!-- Start Content Section -->
            <section class="container mt-4 mb-4">
                <div class="row login-form shadow justify-content-center">
                    <div class="col-md-12">
                        <h3 class="text-center">Create Category</h3>
                    </div>
                    <hr class="w-50 h2" />
                    <form id="account" class="row login_form mt-4 justify-content-center" method="post">
                        <div class="col-md-10 form-group text-center">
                            <label asp-for="Name" class="float-left"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 mt-3 text-center">
                            <button class="primary-btn text-center" type="submit" value="submit">Create</button>
                        </div>
                    </form>
                </div>
            </section>
            <!-- End Content Section -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}