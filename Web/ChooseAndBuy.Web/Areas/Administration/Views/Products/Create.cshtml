@using ChooseAndBuy.Web.Areas.Administration.ViewModels.Products

@model CreateProductBindingModel

@{
    ViewData["Title"] = "Create";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Admin Pane</h1>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">
            <div class="sidebar-categories">
                <div class="head">Browse Categories</div>
                <ul class="main-categories">
                    <li class="main-nav-list">
                        <a href="#"><span class="lnr lnr-arrow-right"></span>Pending Orders</a>
                    </li>
                    <li class="main-nav-list">
                        <a href="#mobileDevices"><span class="lnr lnr-arrow-right"></span>Active Orders</a>
                    </li>
                    <li class="main-nav-list">
                        <a href="#mobileDevices"><span class="lnr lnr-arrow-right"></span>Add Category</a>
                    </li>
                    <li class="main-nav-list">
                        <a href="#mobileDevices"><span class="lnr lnr-arrow-right"></span>Add SubCategory</a>
                    </li>
                    <li class="main-nav-list">
                        <a href="#"><span class="lnr lnr-arrow-right"></span>Add Product</a>
                    </li>
                    <li class="main-nav-list">
                        <a href="#mobileDevices"><span class="lnr lnr-arrow-right"></span>Edit Products</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-xl-9 col-lg-8 col-md-7">
            <!-- Start Content Section -->
            <section class="lattest-product-area pb-40 category-list">
                <div class="row">
                    <form id="account" class="row login_form mt-4" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Name" class="float-left"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Description" class="float-left"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Specification" class="float-left"></label>
                            <input asp-for="Specification" class="form-control" />
                            <span asp-validation-for="Specification" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Price" class="float-left"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="ChildCategories" class="float-left"></label>
                            <div class="default-select" id="default-select">
                                <select asp-for="ChildCategoryId" class="default-select" asp-items="@Model.ChildCategories">
                                </select>
                            </div>
                            <span asp-validation-for="ChildCategories" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FormImages" class="control-label"></label>
                            <input asp-for="FormImages" class="form-control" multiple />
                            <span asp-validation-for="FormImages" class="text-danger"></span>
                        </div>
                    </form>
                </div>
            </section>
            <!-- End Content Section -->
        </div>
    </div>
</div>
