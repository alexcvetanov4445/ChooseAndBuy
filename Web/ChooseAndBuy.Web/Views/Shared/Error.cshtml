@model ErrorViewModel
@{
    this.ViewData["Title"] = "Error";
}

<div class="login_form">
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="error-template">
                    <h1>
                        Oops!
                    </h1>
                    <h2>
                        An error occurred while processing your request.
                    </h2>
                    <div class="error-details">
                        Sorry, an error has occured, please continue using our site or contact support.
                    </div>
                    <div class="error-actions mt-3 mb-5">
                        <a asp-action="Index" asp-controller="Home" class="btn-primary btn-lg">
                            <span class="glyphicon glyphicon-home"></span>
                            Take Me Home
                        </a>
                        <a asp-action="Contact" asp-controller="Home" class="btn btn-default btn-lg">
                            <span class="glyphicon glyphicon-home"></span>
                            Contact Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
