@using ChooseAndBuy.Web.ViewModels.Orders

@model  ConfirmationViewModel

@{
    ViewData["Title"] = "Confirmation";
}

<!--================Order Details Area =================-->
<section class="order_details section_gap">
    <div class="container">
        <h3 class="title_confirmation">Thank you. Your order has been received.</h3>
        <div class="row order_d_inner">
            <div class="col-lg-12">
                <div class="details_item">
                    <h4 class="text-center">Order Info</h4>
                    <div class="d-flex justify-content-center">
                        <ul class="list order_box">
                            <li><a href="#"><span>Expected delivery</span> : @Model.ExpectedDelivery</a></li>
                            <li><a href="#"><span>Payment method</span> : @Model.PaymentMethod</a></li>
                            <li><a href="#"><span>Quantity of products</span> : @Model.QuantityProducts</a></li>
                            <li><a href="#"><span>Total price</span> : $@Model.TotalPrice</a></li>
                        </ul>
                        <ul class="list order_box">
                            <li><a href="#"><span>Client Name</span> : @Model.ClientName</a></li>
                            <li><a href="#"><span>City</span> : @Model.City</a></li>
                            <li><a href="#"><span>Address</span> : @Model.Address</a></li>
                            <li><a href="#"><span>Phone Number</span> : @Model.PhoneNumber</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Order Details Area =================-->
